{
  "$schema": "http://json-schema.org/draft-04/schema#",
    "type": "object",
    "description": "root",
    "properties": {
      "jsonrpc": {
        "type": "string",
        "description": "JSON-RPC version",
        "default": "2.0"
      },
      "id": {
        "type": "null",
        "description": "msg id",
        "default":
          null
      },
      "result":
      {
        "type":
          "object",
        "description": "reply msg object. ",
        "properties":
        {
          "devtype":
          {
            "type":
              "string",
            "description": "device type",
            "default":
              "forest"
          },
          "command":
          {
            "type":
              "string",
            "description": "command",
            "default":
              "getstate"
          },
          "indexes":
          {
            "type":
              "array",
            "description": "여러 디바이스의 값이 한번에 올때를 위한 array, 산림청의 경우 1개만 ",
            "items":
            {
              "type":
                "object",
              "description": "",
              "properties":
              {
                "idx":
                {
                  "type":
                    "integer",
                  "description": "device id",
                  "default":
                    1
                },
                "connection":
                {
                  "type":
                    "boolean",
                  "description": "연결 상태",
                  "default":
                    true
                },
                "roomcons":
                {
                  "type":
                    "array",
                  "description": "온도조절기들의 상태 array",
                  "items":
                  {
                    "type":
                      "object",
                    "description": "온도조절기 개별 상태",
                    "properties":
                    {
                      "rcidx":
                      {
                        "type":
                          "integer",
                        "description": "온도조절기 번호, 덕유산의 경우 1만 사용",
                        "default":
                          1
                      },
                      "power":
                      {
                        "type":
                          "boolean",
                        "description": "난방 모드 인지 외출모드인지 ",
                        "default":
                          true
                      },
                      "heating":
                      {
                        "type":
                          "boolean",
                        "description": "실제 보일러 가동 여부",
                        "default":
                          true
                      },
                      "curtemp":
                      {
                        "type":
                          "integer",
                        "description": "현재온도",
                        "default":
                          25
                      },
                      "settemp":
                      {
                        "type":
                          "integer",
                        "description": "설정온도",
                        "default":
                          32
                      }
                    },
                    "required":
                      [
                      "rcidx",
                    "power",
                    "heating",
                    "curtemp",
                    "settemp"
                      ]
                  }
                },
                "keytag":
                {
                  "type":
                    "boolean",
                  "description": "키텍 꼽혀있는지 빠져있는지 (재실/공실)",
                  "default":
                    true
                },
                "batchlight":
                {
                  "type":
                    "boolean",
                  "description": "일괄소등 스위치 상태",
                  "default":
                    true
                },
                "induction":
                {
                  "type":
                    "boolean",
                  "description": "인덕션(전기레인지) 상태",
                  "default":
                    true
                },
                "securityon":
                {
                  "type":
                    "boolean",
                  "description": "방범감시기능 동작 여부 켜짐/꺼짐",
                  "default":
                    true
                },
                "motiondetect":
                {
                  "type":
                    "boolean",
                  "description": "공실 방범 센서 움직임을 감시함",
                  "default":
                    false
                },
                "notmovement":
                {
                  "type":
                    "boolean",
                  "description": "재실 일정 시간 움직임 없음",
                  "default":
                    false
                },
                "fireevent":
                {
                  "type":
                    "boolean",
                  "description": "화재발생",
                  "default":
                    true
                }
              },
              "required":
                [
                "idx",
              "connection",
              "roomcons",
              "keytag",
              "batchlight",
              "induction",
              "securityon",
              "fireon",
              "securityevent",
              "fireevent"
                ]
            }
          }
        },
        "required":
          [
          "devtype",
        "command",
        "indexes"
          ]
      }
    },
    "required":
      [
      "jsonrpc",
    "id",
    "result"
      ]
}

{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "type": "object",
  "properties":
  {
    "idx":
    {
      "type": "integer",
      "description": "GW에서 같은 종류의 기기를 구분하기 위한 index"
    },
    "open":
    {
      "type": "integer",
      "description": "닫힘(0), 열림(1), 정지(2)"
    },
    "angle":
    {
      "type": "integer",
      "description": "슬롯 각도 정보(0~10)"
    },
    "level":
    {
      "type": "integer",
      "description": "커튼의 열림 정보(0~10)"
    }
  },
  "required":
  [
    "idx",
    "open"
  ]
}
